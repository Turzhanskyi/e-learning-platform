%h4.text-center
  Users created per week
= line_chart @users.group_by_week(:created_at).count
.group_by_day(:created_at).count

%h4.text-center
  Enrollments created per week
= column_chart @enrollments.group_by_week(:created_at).count

%h4.text-center
  Course popularity
= bar_chart @enrollments.joins(:course).group(:'courses.title').count
/= pie_chart @courses.group(:enrollments_count).count
/= pie_chart @enrollments.joins(:course).group(:'courses.title').count
